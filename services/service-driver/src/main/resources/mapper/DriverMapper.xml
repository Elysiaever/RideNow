<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fth.driver.mapper.DriverMapper">

    <!-- 继承BaseMapper的通用方法会自动生效 -->

    <!-- 自定义方法：更新司机状态 -->
    <update id="updateDriverStatus">
        UPDATE t_driver
        SET status = #{status},
            updated_at = NOW()
        WHERE id = #{driverId}
    </update>

</mapper>